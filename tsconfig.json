{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "baseUrl": ".",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    },

    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,
    "strict": true,   
    "skipLibCheck": true,                   
  }
}
